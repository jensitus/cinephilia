<% content_for :title, @cinema.title %>

<% content_for :head do %>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="">
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
<% end %>

<div class="container">
  <p style="color: green"><%= notice %></p>

  <div class="col-xl-12">
    <div class="row">
      <div class="col-xl-6">
        <%= render @cinema %>
        <% if @cinema.street.present? %>
          <div class="mt-3"
               data-controller="cinema-map"
               data-cinema-map-street-value="<%= @cinema.street %>"
               data-cinema-map-zip-value="<%= @cinema.zip %>"
               data-cinema-map-city-value="<%= @cinema.city %>">
            <button class="btn btn-sm btn-outline-secondary d-xl-none mb-2"
                    data-cinema-map-target="toggleBtn"
                    data-action="click->cinema-map#toggle">
              Show map
            </button>
            <div data-cinema-map-target="mapContainer" style="height: 300px;"></div>
            <div data-cinema-map-target="directionsContainer"></div>
          </div>
        <% end %>
      </div>
      <div class="col-xl-1"></div>
      <div class="col-xl-5">
        <div class="mt-5">
          <% @cinema_schedules.each do |date, mov| %>
            <div class="row">
              <div class="col p-2 mb-2 bg-secondary text-white rounded">
                <%= date %>
              </div>
            </div>

            <% mov.each do |movie_title, schedule| %>
              <div class="row border-bottom p-1">
                <div class="col-1 p-0">
                  <%= image_tag("https://image.tmdb.org/t/p/w500" + schedule[0].movie.poster_path, width: "100%") unless schedule[0].movie.poster_path == nil %>
                </div>
                <div class="col-11">
                  <%= link_to movie_title, "/movies/" + schedule[0].movie_id.to_s %>
                  <br>
                  <% schedule.each do |schedule_value| %>
                    <%= schedule_value.time.in_time_zone("Vienna").strftime("%H:%M") %>
                    <span class="text-secondary small">
                      <%= schedule_value.info %>
                    </span>
                    <% schedule_value.tags.each do |tag| %>
                      <span class="text-secondary small">
                        <%= link_to tag.name, "/tags/" + tag.id.to_s, class: 'do_not_underline' %>
                      </span>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <div class="mt-5">
          <%= link_to "Back to cinemas", cinemas_path %>
        </div>
      </div>
    </div>

  </div>
</div>
