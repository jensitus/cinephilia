<div class="container">
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Posts" %>

  <%= @tmdb_token %>

  <h1>Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>