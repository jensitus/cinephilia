<div id="<%= dom_id movie %>">

  <% if movie.poster_path != nil %>
    <%= image_tag("https://image.tmdb.org/t/p/w500" + movie.poster_path, width: "40%", class: "float-start me-3") %>
  <% end %>

  <div class="mt-3 mb-3">
    <strong>
      <%= movie.title %>
    </strong>
  </div>
  <div class="mt-2">
    <%= movie.countries %> <%= movie.year %>
  </div>
  <div>
    <% movie.genres.each do |genre| %>
      <%= genre.name %>
    <% end %>
  </div>
  <div class="mb-2">
    <% if !movie.runtime.nil? && movie.runtime > 0 %>
      <%= movie.runtime %> min
    <% end %>
  </div>

  <div>
    <%= movie.description %>
  </div>

  <div class="mt-2 mb-2 small">
    <%= "D: " + movie.director unless movie.director == nil %> <br>
    <%= "A: " + movie.actors unless movie.actors == nil %>
  </div>

</div>
